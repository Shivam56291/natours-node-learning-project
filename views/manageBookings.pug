extends base

mixin navItem(link, text, icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`/img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    .user-view
      nav.user-view__menu
        ul.side-nav
          +navItem('/me', 'Settings', 'settings')
          +navItem('/my-tours', 'My bookings', 'briefcase')
          +navItem('/my-reviews', 'My reviews', 'star')
          +navItem('/billing', 'Billing', 'credit-card')

        - if (user.role === 'admin')
          .admin-nav
            h5.admin-nav__heading Admin
            ul.side-nav
              +navItem('/manage-tours', 'Manage tours', 'map')
              +navItem('/manage-users', 'Manage users', 'users')
              +navItem('/manage-reviews', 'Manage reviews', 'star')
              +navItem('/manage-bookings', 'Manage bookings', 'briefcase', true)

      .user-view__content
        .user-view__form-container
          h2.heading-secondary.ma-bt-md Manage Bookings
          
          table.table
            thead
              tr
                th User
                th Tour
                th Price
                th Date
                th Actions
            tbody
              each booking in bookings
                tr
                  td= booking.user ? booking.user.name : 'Deleted User'
                  td= booking.tour ? booking.tour.name : 'Deleted Tour'
                  td= `$${booking.price}`
                  td= booking.createdAt.toLocaleString('en-US', {month: 'long', year: 'numeric'})
                  td
                    button.btn.btn--tiny.btn--red.delete-booking(data-booking-id=booking.id) Delete
