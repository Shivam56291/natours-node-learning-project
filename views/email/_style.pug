style.
  /* Global Reset */
  body {
    margin: 0;
    padding: 0;
    background: #f1f5f4;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #333;
    -webkit-font-smoothing: antialiased;
  }

  img {
    max-width: 100%;
    border: none;
    -ms-interpolation-mode: bicubic;
  }

  table {
    border-collapse: collapse;
    width: 100%;
  }

  /* Layout */
  .container {
    max-width: 640px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .card {
    background: #fff;
    border-radius: 18px;
    padding: 40px 35px;
    box-shadow: 0 8px 25px rgba(0,0,0,0.06);
  }

  /* Header */
  .header {
    text-align: center;
    margin-bottom: 35px;
  }

  .header img {
    width: 80px;
    margin-bottom: 12px;
  }

  .header-title {
    font-size: 26px;
    font-weight: 700;
    color: #2a2a2a;
  }

  /* Typography */
  h1 {
    margin-top: 0;
    font-size: 28px;
    font-weight: 700;
    color: #222;
    text-align: center;
  }

  p {
    line-height: 1.7;
    font-size: 16px;
    margin-bottom: 18px;
    color: #555;
  }

  /* Button */
  .btn-primary a {
    display: inline-block;
    padding: 15px 32px;
    border-radius: 10px;
    background: #55c57a;
    text-decoration: none;
    color: #fff !important;
    font-weight: 600;
    font-size: 16px;
  }

  .btn-primary a:hover {
    background: #3ea667 !important;
  }

  /* Footer */
  .footer {
    text-align: center;
    margin-top: 35px;
    color: #999;
    font-size: 13px;
  }

  /* Mobile */
  @media only screen and (max-width: 620px) {
    .container {
      padding: 0 12px !important;
      margin-top: 25px;
    }

    .card {
      padding: 28px 22px !important;
    }

    h1 {
      font-size: 24px !important;
    }

    p {
      font-size: 15px !important;
    }
  }
